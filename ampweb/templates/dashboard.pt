<div id="content" metal:define-macro="body">
    
    <div id="recent_events">
        <h2>
        Recent Events:
        ${total_event_count} events in
        ${total_group_count} groups during the last day
        </h2>

        <div id="recent_graph"></div>
    </div>
    <div id="recent_sources">
        <h2>
        Top networks for events in the last day
        </h2>
        <div id="source_graph"></div>
    </div>
    <div id="eventspace">
        <h2>
        Recent event groups
        </h2>
        <div class="panel-group" id="recentevents" role="tablist" aria-multiselectable="true">
          <div tal:repeat="group groups" class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading${group.id}">
              <h4 class="panel-title">
                <a class="collapsed" data-toggle="collapse"
                        href="#events${group.id}" aria-expanded="false"
                        aria-controls="events${group.id}">
                   <div class="headingblock">${group.date}</div>
                   <div class="headingblock">
                   <ul class="asnames">
                        <li tal:repeat="asn group.asns">${asn}</li>
                   </ul>
                   </div>
                   <div class="pull-right headingblock">
                   <span class="badge pull-right ${group.badgeclass}">
                     ${group.eventcount}</span>
                   </div>
                </a>
              </h4>
            </div>
            <div id="events${group.id}" class="panel-collapse collapse"
                        role="tabpanel" aria-labelledby="heading${group.id}">
              <div class="panel-body">
                <ul id="members_${group.id}" >
                    <li tal:repeat="event group.events">
                        <a href="${event.href}">
                            ${event.label}
                            <br />
                            ${event.description}
                        </a>
                    </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <tal:block tal:condition="extra_groups">
            <p><a href="eventlist">+ ${extra_groups} more event groups</a></p>
        </tal:block>
        <tal:block tal:condition="not extra_groups">
            <p><a href="eventlist">+ see older event groups</a></p>
        </tal:block>
    </div>
</div>
