<div id="content" metal:define-macro="body">
    <h2>Available Collections</h2>

    <ul id="collist">
        <li tal:repeat="col collections">
            <a href="${col.link}">
                <h3>${col.family} ${col.label}</h3>
                <p>${col.description}</p>
            </a>
        </li>
    </ul>
</div>
