<div id="content" metal:define-macro="body">
    <div id="collist">
        <h2>Available Collections</h2>

        <p tal:repeat="col collections">
            <a href="${col.link}">
                <strong>${col.family} ${col.label}</strong><br/>
                ${col.description}
            </a>
        </p>
    </div>
</div>
