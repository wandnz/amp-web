<!DOCTYPE html>
<html lang="en"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:tal="http://xml.zope.org/namespaces/tal">
    <head>
        <meta charset="utf-8">
        <title>CUZ - ${title}</title>
        <link rel="stylesheet" href="${request.static_url('ampweb:static/')}css/global.css">
        <link tal:repeat="style styles" rel="stylesheet" href="${request.static_url('ampweb:static/')}css/${style}">
        <script type="text/javascript">
            var API_URL = "${request.route_url('api', params="")}";
            var GRAPH_URL = "${request.route_url('view', params="")}";
            var STATIC_URL = "${request.static_url('ampweb:static/')}";
            var MODAL_URL = "${request.route_url('modal', params="")}";
        </script>
        <!--[if lt IE 9]>
        <script type="text/javascript" src="${request.static_url('ampweb:static/')}scripts/lib/flashcanvas.js"></script>
        <![endif]-->
        <script src="${request.static_url('ampweb:static/')}scripts/lib/jquery-1.8.3.js"></script>
        <script src="${request.static_url('ampweb:static/')}scripts/lib/history.js"></script>
        <script tal:repeat="script scripts" src="${request.static_url('ampweb:static/')}scripts/${script}"></script>
    </head>
    <!-- XXX temporary inline style to quickly workaround yui3-reset styles -->
    <body style="margin:8px;">
        <span class="header">
            <a href="${request.route_url('dashboard')}"><img src="${request.static_url('ampweb:static/')}img/wand-logo-default.png" alt="Wand Logo"></a> Active Measurement Project
        </span>

        <div metal:use-macro="body">
        </div>
        <span class="footer">
        </span>
    </body>
</html>
