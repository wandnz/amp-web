<!DOCTYPE html>
<html lang="en"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:tal="http://xml.zope.org/namespaces/tal">
    <head>
        <meta charset="utf-8">
        <title>CUZ - ${title}</title>
        <link rel="stylesheet" href="${request.static_url('ampweb:static/')}css/global.css">
        <link tal:repeat="style styles" rel="stylesheet" href="${request.static_url('ampweb:static/')}css/${style}">
        <script type="text/javascript">
            var API_URL = "${request.route_url('api', params="")}";
            var GRAPH_URL = "${request.route_url('view', params="")}";
            var STATIC_URL = "${request.static_url('ampweb:static/')}";
            var MODAL_URL = "${request.route_url('modal', params="")}";
        </script>
        <!--[if lt IE 9]>
        <script type="text/javascript" src="${request.static_url('ampweb:static/')}scripts/lib/flashcanvas.js"></script>
        <![endif]-->
        <script src="${request.static_url('ampweb:static/')}scripts/lib/jquery-1.10.2.min.js"></script>
        <script src="${request.static_url('ampweb:static/')}scripts/lib/html5shiv.js"></script>
        <script src="${request.static_url('ampweb:static/')}scripts/lib/history.js"></script>
        <script src="${request.static_url('ampweb:static/')}scripts/global.js"></script>
        <script tal:repeat="script scripts" src="${request.static_url('ampweb:static/')}scripts/${script}"></script>
    </head>
    <body tal:attributes="class page | nothing">
        <div class="modal" id="modal-foo" tabindex="-1" role="dialog"
            aria-labelledby="modal-foo" aria-hidden="true">
        </div>

        <div id="page">
            <nav>
                <ul>
                    <li id="tab-dashboard"><a href="${request.route_url('dashboard')}">Dashboard</a></li>
                    <li id="tab-browser"><a href="${request.route_url('browser')}">Graph Browser</a></li>
                    <li id="tab-matrix"><a href="${request.route_url('matrix', params='')}">Matrix</a></li>
                </ul>
            </nav>

            <header>
                <a href="${request.route_url('dashboard')}" class="logo"></a>
                <span><a href="${request.route_url('dashboard')}">Active Measurement Project</a></span>
            </header>

            <div id="content" metal:use-macro="body">
            </div>
            
            <footer>
            </footer>
        </div>

    </body>
</html>
