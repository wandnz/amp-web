<div metal:define-macro="modal_body" class="modal-body">
            <form class="form-horizontal" role="form">

                <div class="form-group">
                    <label for="source" class="col-lg-3 control-label">
                        Source
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="source" onchange="graphPage.modal.updateDestination();">
                            <option value="--SELECT--">
                                Select source...
                            </option>
                            <option tal:repeat="source sources">
                                ${source}
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="destination" class="col-lg-3 control-label">
                        Destination
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="destination" disabled onchange="graphPage.modal.updatePacketSize();">
                        </select>
                    </div>
                </div>

                <!-- TODO allow selecting ranges of size, or all sizes -->
                <div class="form-group">
                    <label for="packet_size" class="col-lg-3 control-label">
                        Packet Size
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="packet_size" disabled onchange="graphPage.modal.updateAddress();">
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="address" class="col-lg-3 control-label">
                        Target Address
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="address" disabled onchange="graphPage.modal.updateSubmit();">
                        </select>
                    </div>
                </div>

            </form>
        </div>

