<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="source" class="col-lg-3 control-label">
                Source
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="source" disabled onchange="graphPage.modal.update('source');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="host" class="col-lg-3 control-label">
                Destination
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="host" disabled onchange="graphPage.modal.update('host');">
                </select>
            </div>
        </div>

    </form>
</div>

