<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="res_name" class="col-lg-3 control-label">
                VM Name
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="res_name" disabled onchange="graphPage.modal.update('res_name');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div id="macdiv" class="form-group">
            <label for="mac" class="col-lg-3 control-label">
                MAC Address
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="mac" disabled onchange="graphPage.modal.update('mac');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="direction" class="col-lg-3 control-label">
                Direction
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label class="btn btn-primary active">
                    <input type="radio" name="direction" value="both" checked onchange="graphPage.modal.update('direction');">
                    Both
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="direction" value="in" onchange="graphPage.modal.update('direction');">
                    In
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="direction" value="out" onchange="graphPage.modal.update('direction');">
                    Out
                </label>
            </div>
        </div>


    </form>
</div>
