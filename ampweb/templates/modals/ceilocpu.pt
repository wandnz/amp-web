<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="res_name" class="col-lg-3 control-label">
                VM Name
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="res_name" disabled onchange="graphPage.modal.update('res_name');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div id="guiddiv" class="form-group hide">
            <label for="guid" class="col-lg-3 control-label">
                GUID
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="guid" disabled onchange="graphPage.modal.update('guid');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>
    </form>
</div>
