<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="source" class="col-lg-3 control-label">
                Source
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="source" onchange="graphPage.modal.update('source')">
                    <option value="--SELECT--">
                        Select source...
                    </option>
                    <option tal:repeat="source sources">
                        ${source}
                    </option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="server" class="col-lg-3 control-label">
                Server
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="server" disabled onchange="graphPage.modal.update('server');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="query" class="col-lg-3 control-label">
               Query
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="query" disabled onchange="graphPage.modal.update('query');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="type" class="col-lg-3 control-label">
               Type
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="type" disabled onchange="graphPage.modal.update('type');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="aggregation" class="col-lg-3 control-label">
              Aggregation
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label class="btn btn-primary active">
                    <input type="radio" name="aggregation" value="full" checked>
                    Combine Instances
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="aggregation" value="none">
                    Split Instances
                </label>
            </div>
        </div>

    </form>
</div>

