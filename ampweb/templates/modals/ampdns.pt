<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="source" class="col-lg-3 control-label">
                Source
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="source" disabled onchange="graphPage.modal.update('source')">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="destination" class="col-lg-3 control-label">
                Server
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="destination" disabled onchange="graphPage.modal.update('destination');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="recurse" class="col-lg-3 control-label">
              Recursion
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label id="recurse-true" class="btn btn-primary disabled">
                    <input type="radio" name="recurse" value="true" onchange="graphPage.modal.update('recurse');">
                    Yes
                </label>
                <label id="recurse-false" class="btn btn-primary disabled">
                    <input type="radio" name="recurse" value="false" onchange="graphPage.modal.update('recurse');">
                    No
                </label>
            </div>
        </div>
        
        <div class="form-group">
            <label for="query" class="col-lg-3 control-label">
               Query
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="query" disabled onchange="graphPage.modal.update('query');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="query_type" class="col-lg-3 control-label">
               Type
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="query_type" disabled onchange="graphPage.modal.update('query_type');">
                </select>
            </div>
        </div>
        
        <div class="form-group">
            <label for="query_class" class="col-lg-3 control-label">
               Query Class
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="query_class" disabled onchange="graphPage.modal.update('query_class');">
                </select>
            </div>
        </div>
        
        
        <div class="form-group">
            <label for="udp_payload_size" class="col-lg-3 control-label">
               Payload Size
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="udp_payload_size" disabled onchange="graphPage.modal.update('udp_payload_size');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="dnssec" class="col-lg-3 control-label">
              DNSSEC
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label id="dnssec-true" class="btn btn-primary disabled">
                    <input type="radio" name="dnssec" value="true">
                    Yes
                </label>
                <label id="dnssec-false" class="btn btn-primary disabled">
                    <input type="radio" name="dnssec" value="false">
                    No
                </label>
            </div>
        </div>
        
        <div class="form-group">
            <label for="nsid" class="col-lg-3 control-label">
              NSID
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label id="nsid-true" class="btn btn-primary disabled">
                    <input type="radio" name="nsid" value="true">
                    Yes
                </label>
                <label id="nsid-false" class="btn btn-primary disabled">
                    <input type="radio" name="nsid" value="false">
                    No
                </label>
            </div>
        </div>

        <div class="form-group">
            <label for="aggregation" class="col-lg-3 control-label">
              Aggregation
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label class="btn btn-primary active">
                    <input type="radio" name="aggregation" value="full" checked>
                    Combine Instances
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="aggregation" value="none">
                    Split Instances
                </label>
            </div>
        </div>

    </form>
</div>

