<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="res_name" class="col-lg-3 control-label">
                VM Name
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="res_name" disabled onchange="graphPage.modal.update('res_name');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div id="guiddiv" class="form-group hide">
            <label for="guid" class="col-lg-3 control-label">
                GUID
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="guid" disabled onchange="graphPage.modal.update('guid');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="readwrite" class="col-lg-3 control-label">
                Operation
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label class="btn btn-primary active">
                    <input type="radio" name="readwrite" value="both" checked onchange="graphPage.modal.update('readwrite');">
                    Both
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="readwrite" value="read" onchange="graphPage.modal.update('readwrite');">
                    Reads
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="readwrite" value="write" onchange="graphPage.modal.update('readwrite');">
                    Writes
                </label>
            </div>
        </div>


    </form>
</div>


