<div metal:define-macro="modal_body" class="modal-body">
    <form class="form-horizontal" role="form">

        <div class="form-group">
            <label for="switch" class="col-lg-3 control-label">
                Switch
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="switch" disabled onchange="graphPage.modal.update('switch');">
                    <option>Loading...</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="interfacelabel" class="col-lg-3 control-label">
                Interface
            </label>
            <div class="col-lg-9">
                <select class="form-control" id="interfacelabel" disabled onchange="graphPage.modal.update('interfacelabel');">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="direction" class="col-lg-3 control-label">
                Direction
            </label>
            <div class="col-lg-9 btn-group" data-toggle="buttons">
                <label class="btn btn-primary active">
                    <input type="radio" name="direction" value="both" checked onchange="graphPage.modal.update('direction');">
                    Both
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="direction" value="received" onchange="graphPage.modal.update('direction');">
                    Received
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="direction" value="sent" onchange="graphPage.modal.update('direction');">
                    Sent
                </label>
            </div>
        </div>

    </form>
</div>

