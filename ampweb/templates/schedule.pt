<div id="content" metal:define-macro="body">

    <div id="schedule">
        <h2>
        Test Schedule for ${fullname} (${ampname})
        </h2>
    </div>

    <div tal:repeat="item schedule">
        <p>${item.test} test to:
            <ul>
                <tal:block tal:condition="len(item.dest_mesh) > 0">
                    <li>${len(item.dest_mesh)} mesh${"es" if len(item.dest_mesh)!=1 else ""}</li>
                    <ul>
                        <li tal:repeat="mesh item.dest_mesh">${mesh}</li>
                    </ul>
                </tal:block>
                <tal:block tal:condition="len(item.dest_site) > 0">
                    <li>${len(item.dest_site)} site${"s" if len(item.dest_site)!=1 else ""}</li>
                    <ul>
                        <li tal:repeat="site item.dest_site">${site}</li>
                    </ul>
                </tal:block>
            </ul>
        </p>

        <ul>
            <li>Frequency: ${item.frequency}</li>
            <tal:block tal:condition="item.start">
                <li>Start: ${item.start}</li>
            </tal:block>
            <tal:block tal:condition="item.args">
                <li>Arguments: ${item.args}</li>
            </tal:block>
        </ul>
    </div>

    <br />

    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-foo" href="/schedule/add/${ampname}">
      Schedule new test
    </button>

    <p>
    <a href="/schedule/yaml/${ampname}">View raw schedule as yaml</a>
    </p>

</div> <!-- content -->
