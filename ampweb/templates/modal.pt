<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add new data series</h4>
        </div>

        <div class="modal-body">
            <form class="form-horizontal" role="form">

                <div class="form-group">
                    <label for="source" class="col-lg-3 control-label">
                        Source
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="source" onchange="AmpIcmpModal.updateDestination();">
                            <option value="--SELECT--">
                                Select source...
                            </option>
                            <option tal:repeat="source sources">
                                ${source}
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="destination" class="col-lg-3 control-label">
                        Destination
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="destination" disabled onchange="AmpIcmpModal.updatePacketSize();">
                        </select>
                    </div>
                </div>

                <!-- TODO allow selecting ranges of size, or all sizes -->
                <div class="form-group">
                    <label for="packet_size" class="col-lg-3 control-label">
                        Packet Size
                    </label>
                    <div class="col-lg-9">
                        <select class="form-control" id="packet_size" disabled>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="packetsize" class="col-lg-3 control-label">
                        Aggregation
                    </label>
                    <div class="col-lg-9 btn-group" data-toggle="buttons">
                        <label class="btn btn-primary active">
                            <input type="radio" name="aggregation" value="full">
                            Full
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="aggregation" value="family">
                            IPv4/IPv6
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="aggregation" value="network">
                            Network
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="aggregation" value="asn">
                            ASN
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="aggregation" value="none">
                            None
                        </label>
                    </div>
                </div>

            </form>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Discard changes
            </button>
            <button type="button" id="submit" class="btn btn-primary" onclick="AmpIcmpModal.submitModal();">Add data series</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
