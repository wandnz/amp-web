<div id="content" metal:define-macro="body">
    <ul id="topTabList">
        <li id="latency-tab">
            <a href="javascript: void(0)" title="Latency relative to the mean">
                Relative Latency
            </a>
        </li>
        <li id="absolute-latency-tab">
            <a href="javascript: void(0)" title="Latency on a fixed scale">
                Absolute Latency
            </a>
        </li>
        <li id="loss-tab">
            <a href="javascript: void(0)" title="Loss">
                Loss
            </a>
        </li>
        <li id="hops-tab">
            <a href="javascript: void(0)" title="Hops">
                Hops
            </a>
        </li>
        <li id="mtu-tab">
            <a href="javascript: void(0)" title="Maximum Transmission Unit">
                MTU
            </a>
        </li>
        <li id="changeMesh">
            <div>
                <div>Show from</div>
                <select id="changeMesh_source">
                    <option tal:repeat="srcMesh srcMeshes" title="${srcMesh.description}" value="${srcMesh.name}">${srcMesh.longname}</option>
                </select>
                <div>to</div>
                <select id="changeMesh_destination">
                    <option tal:repeat="dstMesh dstMeshes" title="${dstMesh.description}" value="${dstMesh.name}">${dstMesh.longname}</option>
                </select>
                <div><button id="changeMesh_button" type="button">Go</button></div>
            </div>
        </li>
    </ul>
    <div id="tabContent">
        <table id="amp-matrix" class="main_grid">
            <thead id="matrix_head">
            </thead>
            <tbody id="matrix_body">
            </tbody>
        </table>
    </div>
</div>
