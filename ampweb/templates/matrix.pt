<div id="content" metal:define-macro="body">
    <ul id="topTabList">
        <li id="latency-tab">
            <a href="javascript: void(0)" title="Latency relative to the mean">
                Relative Latency
            </a>
        </li>
        <li id="absolute-latency-tab">
            <a href="javascript: void(0)" title="Latency on a fixed scale">
                Absolute Latency
            </a>
        </li>
        <li id="loss-tab">
            <a href="javascript: void(0)" title="Loss">
                Loss
            </a>
        </li>
        <li id="hops-tab">
            <a href="javascript: void(0)" title="Hops">
                Hops
            </a>
        </li>
        <li id="mtu-tab">
            <a href="javascript: void(0)" title="Maximum Transmission Unit">
                MTU
            </a>
        </li>
        <li id="loading"></li>
        <li id="changeMesh">
            <div>
                <div>Show from</div>
                <select id="changeMesh_source">
                    <option tal:repeat="srcMesh srcMeshes" title="${srcMesh.description}" value="${srcMesh.name}">${srcMesh.longname}</option>
                </select>
                <div>to</div>
                <select id="changeMesh_destination">
                    <option tal:repeat="dstMesh dstMeshes" title="${dstMesh.description}" value="${dstMesh.name}">${dstMesh.longname}</option>
                </select>
                <div><button id="changeMesh_button" type="button">Go</button></div>
            </div>
        </li>
    </ul>
    <div id="tabContent">
        <table id="amp-matrix">
            <thead id="matrix_head">
            </thead>
            <tbody id="matrix_body">
            </tbody>
        </table>
        <div id="colour-key">
            <table>
                <tbody>
                    <tr>
                        <td>No test</td>
                        <td class="cell test-none"></td>
                    </tr>
                    <tr>
                        <td>No data (error)</td>
                        <td class="cell test-error"></td>
                    </tr>
                    <tr>
                        <td>0% Loss</td>
                        <td class="cell test-colour1"></td>
                    </tr>
                    <tr>
                        <td>&lt;5% Loss</td>
                        <td class="cell test-colour2"></td>
                    </tr>
                    <tr>
                        <td>&lt;10% Loss</td>
                        <td class="cell test-colour3"></td>
                    </tr>
                    <tr>
                        <td>&lt;20% Loss</td>
                        <td class="cell test-colour4"></td>
                    </tr>
                    <tr>
                        <td>&lt;30% Loss</td>
                        <td class="cell test-colour5"></td>
                    </tr>
                    <tr>
                        <td>&lt;80% Loss</td>
                        <td class="cell test-colour6"></td>
                    </tr>
                    <tr>
                        <td>&gt;80% Loss</td>
                        <td class="cell test-colour7"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
