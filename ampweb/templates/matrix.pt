<div metal:define-macro="body">
    <div id="topTabs">
        <ul id="topTabList">
            <li id="latencyTab"><a href="#tabContent">Latency</a></li>
            <li id="lossTab"><a href="#tabContent">Loss</a></li>
            <li id="hopsTab"><a href="#tabContent">Hops</a></li>
            <li id="mtuTab"><a href="#tabContent">MTU</a></li>
        </ul>
        <div id="tabContent">
            <table id="AMP_matrix" class="main_grid">
                <thead>
                    <tr>
                        <th>Source:</th>
                        <th tal:repeat="destination dstList">${destination}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr tal:repeat="source srcList">
                        <th scope="row">${source}</th>
                        <td tal:repeat="destination dstList"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
