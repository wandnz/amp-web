<div id="content" metal:define-macro="body">
    <ul id="topTabList">
        <li tal:repeat="tab tabs" id="${tab.id}">
            <a href="javascript: void(0)" title="${tab.descr}">
                ${tab.title}
            </a>
        </li>
        <li id="loading"></li>
        <li id="changeMesh">
            <div>
                <div>Show from</div>
                <select id="changeMesh_source">
                    <option tal:repeat="srcMesh srcMeshes" title="${srcMesh.description}" value="${srcMesh.name}">${srcMesh.longname}</option>
                </select>
                <div>to</div>
                <select id="changeMesh_destination">
                </select>
                <div><button id="changeMesh_button" type="button">Go</button></div>
            </div>
        </li>
    </ul>
    <table id="amp-matrix">
        <thead>
        </thead>
        <tbody>
        </tbody>
    </table>
    <div id="colour-key">
        <select id="latency_metric">
            <option value="dns">DNS Latency</option>
            <option value="icmp">ICMP Latency</option>
            <option value="tcp">TCP Latency</option>
        </select>
        <select id="traceroute_metric">
            <option value="iphops">IP Hops</option>
        </select>
        <select id="http_metric">
            <option value="duration">Time</option>
        </select>
        <select id="tput_metric">
            <option value="throughput">Bitrate</option>
        </select>
        <select id="show_family">
            <option value="both">Show both IPv4 and IPv6</option>
            <option value="ipv4">Show only IPv4</option>
            <option value="ipv6">Show only IPv6</option>
        </select>
        <select id="show_direction">
            <option value="both">Show both download and upload</option>
            <option value="down">Show only download</option>
            <option value="up">Show only upload</option>
        </select>
    </div>
</div>
