<div id="content" metal:define-macro="body">
    <ul id="topTabList">
        <li tal:repeat="tab tabs" id="${tab.id}">
            <a href="javascript: void(0)" title="${tab.descr}">
                ${tab.title}
            </a>
        </li>
        <li id="loading"></li>
        <li id="changeMesh">
            <div>
                <div>Show from</div>
                <select id="changeMesh_source">
                    <option tal:repeat="srcMesh srcMeshes" title="${srcMesh.description}" value="${srcMesh.name}">${srcMesh.longname}</option>
                </select>
                <div>to</div>
                <select id="changeMesh_destination">
                </select>
            </div>
        </li>
    </ul>
    <table id="amp-matrix">
        <thead>
        </thead>
        <tbody>
        </tbody>
    </table>
    <div id="colour-key">
        <p><select id="metricDropdown">
        </select>
        <p><select id="splitDropdown">
        </select>
    </div>
</div>
