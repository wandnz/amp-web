<div metal:define-macro="body">
	<br />
	<div id="choices">
		Metric:
		<select id="drpMetric" name="metric" onChange="dropdownCallback(this, 'lpi-basic');" >
			<option value="--SELECT">--SELECT--</option>
			<option tal:repeat="item metrics" value="${item['name']}" tal:attributes="selected '' if item['selected'] == True else None">${item['name']}</option>
		</select>
		
		Source:
		<select id="drpSource" name="source" onChange="dropdownCallback(this, 'lpi-basic');" >
			<option value="--SELECT">--SELECT--</option>
			<option tal:repeat="item sources" value="${item['name']}" tal:attributes="selected '' if item['selected'] == True else None">${item['name']}</option>
		</select>

		User:
		<select id="drpUser" name="user" onChange="dropdownCallback(this, 'lpi-basic');" tal:attributes="disabled '' if enableUser == False else None" >
			<option value="--SELECT">--SELECT--</option>
			<option tal:repeat="item users" value="${item['name']}" tal:attributes="selected '' if item['selected'] == True else None">${item['name']}</option>
		</select>
		<br />
		Protocol:
		<select id="drpProtocol" name="protocol" onChange="dropdownCallback(this, 'lpi-basic');" >
			<option value="--SELECT">--SELECT--</option>
			<option tal:repeat="item protocols" value="${item['name']}" tal:attributes="selected '' if item['selected'] == True else None">${item['name']}</option>
		</select>

		Direction:
		<select id="drpDirection" name="direction" onChange="dropdownCallback(this, 'lpi-basic');" >
			<option value="--SELECT">--SELECT--</option>
			<option tal:repeat="item directions" value="${item['name']}" tal:attributes="selected '' if item['selected'] == True else None">${item['name']}</option>
		</select>
	</div>

	<table>
		<tr>
			<td class="align-top">
				<div id="graph">Graph Goes Here</div>
			</td>
			<td class="align-top">
			</td>
		</tr>
	</table>
</div>


